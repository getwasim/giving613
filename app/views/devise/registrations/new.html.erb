<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
 <!--<%= form_tag(new_user_registration_path , method: "get") %>-->
  <%= devise_error_messages! %>
  

  <div><%= f.label :user_name %><br />
  <%= f.text_field :user_name, :autofocus => true %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
<div>
<%= f.check_box :terms_conditions %>I have read and agree to the Terms & Conditions </div>
  <div><%= f.submit "Sign up" %></div>
<%= render "devise/shared/links" %>
<%end %>
<% if params[:role] == "Organization" %>
 
 <div><%= f.label :user_name %><br />
  <%= f.text_field :user_name, :autofocus => true %></div>
<% end %>
